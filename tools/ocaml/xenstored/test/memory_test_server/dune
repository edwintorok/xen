(rule
  ; comment out reference to /proc files: unit test will provide fake ones instead
  (action (with-stdout-to oxenstored-test.conf
  (run sed -e "s/xenstored-/#/" %{dep:../../oxenstored.conf}))))

(test
 (name memory_test_server)
 (modes exe)
